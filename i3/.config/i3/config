# -------------------------------
# ---------- Variables ----------
# -------------------------------

# Super key
set $mod Mod4
# Home row direction keys
set $left h
set $down j
set $up k
set $right l
# Terminal and dmenu
set $term termite
set $menu rofi -show run
# Wallpaper
set $wallpaper ~/.config/i3/arch.png
# Command called to lock the screen
set $Locker sleep 0.1 && ~/.config/i3/lock.sh && sleep 1
# Workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# -------------------------------------------
# ---------- Display Configuration ----------
# -------------------------------------------

# Set wallpaper
exec --no-startup-id feh --bg-scale $wallpaper
# Start the compositor
exec --no-startup-id picom
# Container configuration
hide_edge_borders smart
default_border pixel 1

# -----------------------------------------
# ---------- Input Configuration ----------
# -----------------------------------------

# Set the keyboard layout
exec --no-startup-id setxkbmap -layout gb

# -------------------------------------------
# ---------- Startup configuration ----------
# -------------------------------------------

# Start the status bar
exec --no-startup-id polybar example
# Start dunst for notifications
exec --no-startup-id dunst

#NOT WORKING NEEDS FIX SOON
# Start xautolock to lock the screen after specific amount of time
exec --no-startup-id xautolock -time 10 -locker $Locker
# Start xss-lock to lock on suspend and hibernate
exec --no-startup-id xss-lock -- $Locker


# Tray programs
exec --no-startup-id nm-applet
exec --no-startup-id nextcloud --background
exec --no-startup-id blueman-applet

# ---------------------------
# ---------- Modes ----------
# ---------------------------

# Mode used to show menu to lock, logout, suspend etc
set $mode_system System: (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    # Select option
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"  
    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Insert mode "$mode_system"

# Mode used to resize containers
mode "resize" {
    # Change window size
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px
    # Change window size with the arrow keys
    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px
    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"


# ------------------------------
# ---------- Keybinds ----------
# ------------------------------

# i3 KEYBINDS
bindsym $mod+Shift+q kill
floating_modifier $mod
bindsym $mod+Shift+r reload

# APPLICATIONS
bindsym $mod+Return exec $term # Terminal
bindsym $mod+d exec $menu # Launcher
bindsym $mod+Shift+c exec firefox
bindsym $mod+Shift+e exec termite -e ranger
bindsym $mod+Shift+y exec termite -e mpsyt

# COMMAND KEYBINDS
bindsym XF86MonBrightnessUp exec --no-startup-id "xbacklight -inc 10"
bindsym XF86MonBrightnessDown exec --no-startup-id "xbacklight -dec 10"
bindsym XF86AudioMute exec ~/.config/i3/volume_keys.sh M  # To adjust the volume
bindsym --release Print exec grim ~/Pictures/Screenshots/$(date +'%s_grim.png') # Save screenshot to screenshots folder 
bindsym XF86AudioRaiseVolume exec ~/.config/i3/volume_keys.sh +2%
bindsym XF86AudioLowerVolume exec ~/.config/i3/volume_keys.sh -2%

# WINDOW MANAGEMENT
# Move focus
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right
# Move focus with arrow keys
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
# Move windows
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right
# Move windows with the arrow keys
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right
# Switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10
# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10
# Change container type
bindsym $mod+b splith
bindsym $mod+v splitv
# Make the current focus fullscreen
bindsym $mod+f fullscreen
# Toggle the current focus between tiling and floating mode
bindsym $mod+Shift+space floating toggle
# Swap focus between the tiling area and the floating area
bindsym $mod+space focus mode_toggle
# Move focus to the parent container
bindsym $mod+a focus parent
# Move the currently focused window to the scratchpad
bindsym $mod+Shift+minus move scratchpad
# Cycle scratchpad windows
bindsym $mod+minus scratchpad show

